<% if !@errors.blank? %>
   <p class='error'><i class="fa fa-exclamation-circle"></i>&nbsp; 
    <%= "#{@errors}" %>
  </p>
<% end %>

<form action="<%= words_form_action(@word) %>" method="post" id="<%= words_form_id(@word) %>" class="<%= words_form_class(@word) %>">	
	<input type="hidden" name="_method" value="<%= 	words_form_method(@word) %>" />
	<div>
 		<label for="text">Word:</label>
  		<input type="text" name="text" value="<%= 			@word.text %>" />
 	</div>
		<div>
  		<input type="submit" />
	</div>
 </form>
