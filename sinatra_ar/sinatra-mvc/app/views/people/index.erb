<div class="text-center">
	<table class="text-center">
	<thead>
    		<th class="text-center">Name</th><th></th> 
    		<th class="text-center">Birthdate</th> 
		<th></th> 
    		<th>Edit</th>
		<th></th>
    		<th>Delete</th>
  	</thead>
  	<tbody>
    		<% @people.each do |person| %>
      	<tr>
        		<td>
          			<a href="<%= "/people/#{person.id}" %>"><%= "#{person.first_name} #{person.last_name}" %></a>
        </td>
			<td> &nbsp;&nbsp;&nbsp; </td>
        		<td>
          			<%= "#{person.birthdate.strftime("%m-%d-%Y")}" %>
        		</td>
			<td> &nbsp;&nbsp;&nbsp; </td>
       		<td>
            		<a href="<%= "/people/#{person.id}/edit" %>"> Edit </a>
          		</td> 
			<td> &nbsp;&nbsp;&nbsp; </td>
       		<td> 
            		<div class="delete"><form action="<%= "/people/#{person.id}" %>" method="post">
              			<input type="hidden" name="_method" value="delete" />
              			<input type="submit" value="Delete" />
            		</form></div>
          		</td>
      	</tr>
    		<% end %>
  		</tbody>
	</table>
</div>