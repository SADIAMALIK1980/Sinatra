<div class="row"><div class="col-md-4">
</div><table>
  <thead>
    <th class="text-center">Name</th>
    <th class="text-center">Birthdate</th>   
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <a href="<%= "/people/#{person.id}" %>">
            <%= "#{person.first_name} #{person.last_name}" %>
          </a>
        </td>
        <td>
          <%= "#{person.birthdate}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
